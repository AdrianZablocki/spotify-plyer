{
  "compilerOptions": {
    "downlevelIteration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./build",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src", "typings/**/*"],
  "exclude": ["src/**/*.test.tsx", "src/**/*.test.ts"]
}
